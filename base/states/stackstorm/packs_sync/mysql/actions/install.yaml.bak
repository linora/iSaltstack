---
name: "install"
pack: "mysql"
runner_type: "local-shell-script"
description: "Install mysql on the target hosts."
enabled: true
entry_point: "/opt/stackstorm/packs/mysql/actions/install.sh"
parameters:
    target_host:
        type: "string"
        description: "salt regex for the target hosts."
        required: true
        default: "NoHostsGived"
        position: 0
    mysql_home:
        type: "string"
        description: "mysql host path to install."
        required: true
        default: "/app/mysql"
        position: 1
    buffer_pool_ratio:
        type: "string"
        description: "buffer pool ratio."
        required: false 
        default: "0.125"
        position: 2
    chunk_count:
        type: "integer"
        description: "mysql chunk count for mysql 5.7 and later."
        required: false 
        default: 2
        position: 3
    mysql_version:
        type: "integer"
        description: "mysql version."
        required: true
        default: 6
        position: 4
    server_id:
        type: "integer"
        description: "server id for mysql."
        required: true
        default: 10010
        position: 5
    large_pages:
        type: "integer"
        description: "if enable huge pages."
        required: true
        default: 0
        position: 6
    huge_pages_number:
        type: "integer"
        description: "huge pages number."
        required: false 
        default: 256
        position: 7
